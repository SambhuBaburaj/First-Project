<div class="container">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <a href="/admin/add-category"><label style="margin: 6em 0em "
            class="badge badge-success px-5 py-3 float-right">Add Category</label></a>
        <h4 class="card-title" style="margin-top: 3em;">Category</h4>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Category</th>
              {{!-- <th>Sub-category</th> --}}
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          {{#each categories}}
          <tbody>
            <tr>
              <td>{{this.category}}</td>
              <td><a href="/admin/edit-category/{{this._id}}"><label class="badge badge-success">Edit</label></a></td>
              <td><a href="/admin/delete-category/{{this._id}}"><label class="badge badge-danger">Delete</label></a></td>
            </tr>
     
          </tbody>
          {{/each}}
        </table>
      </div>
    </div>
  </div>
</div>